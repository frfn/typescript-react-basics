// npx tsc --init to initialize tsconfig.json file
{
	"compilerOptions": {
		"target": "ES6",
		"module": "ES6",
		"strict": true,
		"noEmit": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"jsx": "react",
		"removeComments": true,
		// "sourceMap": true  /* for ts-loader | to use source maps */
		"moduleResolution": "Node",
		"resolveJsonModule": true
	},
	"include": ["./src/**/*"]
}
